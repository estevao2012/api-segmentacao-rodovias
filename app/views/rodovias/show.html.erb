	</div>
	<div class="panel-body">
		
		<div class="rodovia">
			<div class="segmentos">
				<span class="linha-segmentos"></span>
				<%# @rodovias.each do |segmento| %>
					<%#= render partial: 'segmento' , object: segmento %>
				<%# end %>
			</div>
		</div>

		<div class="infomacao-rodovia"></div>
		<div class="adicionar-categoria"></div>

	</div>
</div>